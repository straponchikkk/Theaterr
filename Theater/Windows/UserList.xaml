<Window x:Class="Theater.Windows.UserList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theater.Windows"
        mc:Ignorable="d"
        Title="UserList" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="UsersDataGrid" AutoGenerateColumns="False" Margin="10,10,10,170">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" Binding="{Binding Email}" />
                <DataGridTextColumn Header="Пароль" Binding="{Binding Password}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" />
                <DataGridTextColumn Header="Номер телефона" Binding="{Binding Phone}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Вернуться назад" Background="Pink" Width="170" Height="50" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Click="Back_Click"/>
    </Grid>
 
</Window>
